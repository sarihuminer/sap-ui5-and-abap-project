<mvc:View controllerName="Ztest.Ztest.controller.View4" 
xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
							<Button text="{i18n>btn2}" press="onPress" ></Button>
							<Table id="idMTable2" noDataText="{i18n>NoData}"
								items="{/EtzekpoSet}">
								<items>
									<ColumnListItem counter="0" type="Active"  >
										<cells>
											<Text text="{Ebeln}" maxLines="0"   ></Text>
											<Text text="{Ebelp}" maxLines="0"></Text>
											<Text text="{Name}" maxLines="0"></Text>
											<Text text="{Amount}" maxLines="0"></Text>
											<Text text="{Price}" maxLines="0"></Text>
											<Button icon="sap-icon://delete" press="delete_row()"/>
											<Button icon="sap-icon://edit" press="edit_row()"/>
										</cells>
									</ColumnListItem>
								</items>
								<columns>
									<Column hAlign="Right"    >
										<header >
											<Text text="{i18n>Ebeln}" textAlign="Right" maxLines="0"></Text>
										</header>
									</Column >
									<Column hAlign="Right" >
										<header>
											<Text text="{i18n>Ebelp}" textAlign="Right" maxLines="0" ></Text>
										</header>
									</Column>	
									<Column hAlign="Right" >
										<header>
											<Text text="{i18n>Name}" textAlign="Right" maxLines="0"></Text>
										</header>
									</Column>		
									<Column hAlign="Right" >
										<header>
											<Text text="{i18n>Amount}" textAlign="Right" maxLines="0"></Text>
										</header>
									</Column>	
									<Column hAlign="Right" >
										<header>
											<Text text="{i18n>Price}" textAlign="Right" maxLines="0"></Text>
										</header>
									</Column>	
									<Column hAlign="Right" class="icons">
										<header>
											<Text text="" textAlign="Right" maxLines="0"></Text>
										</header>
									</Column>
									<Column hAlign="Right" class="icons" >
										<header>
											<Text text="" textAlign="left" maxLines="0"></Text>
										</header>
									</Column>				
								</columns>
							</Table>
					
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>